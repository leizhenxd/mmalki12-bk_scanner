<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_smsdigest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/colorBackground"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.malki.bktelematics.SMSDigestActivity">

    <Button
        android:text="HOME"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:stateListAnimator="@null"
        android:textColor="@color/colorButton"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp"
        android:id="@+id/button16" />

    <TextView
        android:text="you may now use your 4-digit PIN to login to Black Knight Telematics from now on"
        android:textSize="18sp"
        android:layout_width="280dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:textColor="@color/colorHint"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="ACCOUNT SUCCESSFULLY CREATED!"
        android:textColor="@color/colorWhite"

        android:layout_width="320dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textView24"
        android:layout_marginBottom="103dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
