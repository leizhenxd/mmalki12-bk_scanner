<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingStart="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingEnd="0dp"
    tools:context="com.example.malki.bktelematics.ConnectActivity">

    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="TextView"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Please locate your vehicle's Compliance Plate containing the 17-digit VIN and barcode"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:id="@+id/textView30" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@id/scanVINbutton"
        android:stateListAnimator="@null"
        android:textColor="@color/colorButton"
        android:text="Scan VIN"
        android:background="@color/colorBackground"
        android:textAllCaps="true"
        android:layout_marginBottom="20dp"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="(usually on the pillar door)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/textView31"
        android:textColor="@color/colorHint"
        android:gravity="center"

        android:layout_below="@+id/textView30"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="167dp"
        android:src="@drawable/compliance"
        android:id="@+id/imageView8"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />


</RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="@color/colorToolbar"/>

</android.support.v4.widget.DrawerLayout>