<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bksignin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.malki.bktelematics.BKSigninActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:fontFamily="monospace"
        android:ems="10"
        android:id="@+id/editText4"
        android:hint="Password"
        android:gravity="center"
        android:backgroundTint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorHint"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/signin"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorHint"
        android:ems="10"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorWhite"
        android:fontFamily="monospace"
        android:id="@+id/editText2"
        android:hint="Dealer username"
        android:gravity="center"
        android:layout_above="@+id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4" />

    <TextView
        android:text="TELEMATICS."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:id="@+id/textView22"
        android:layout_marginTop="-10dp"
        android:textSize="38sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true" />



    <TextView
        android:text="BLACK KNIGHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:id="@+id/textView21"
        android:textSize="38sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView20"
        android:layout_marginTop="-10dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=" WELCOME TO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/colorWhite"
        android:id="@+id/textView20"
        android:textSize="38sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:src="@drawable/bkmain"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />
    <Button
        android:text="CREATE ACCOUNT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:background="@color/colorBackground"
        android:textColor="@color/colorButton"
        android:id="@+id/signin"
        android:textAllCaps="true"
        android:layout_marginBottom="90dp"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/hamburger"
        android:layout_above="@+id/signin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/imageView16" />

</RelativeLayout>
