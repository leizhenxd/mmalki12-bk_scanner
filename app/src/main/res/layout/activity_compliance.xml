<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:id="@+id/activity_compliance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingStart="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingEnd="0dp"
    android:background="@color/colorBackground"
    tools:context="com.example.malki.bktelematics.Compliance">

    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="VIN - ENTER MANUALLY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"

        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textAllCaps="true"
        android:textSize="18sp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:id="@+id/textView32" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:background="@color/colorBackground"
        android:textColor="@color/colorButton"
        android:textAllCaps="true"
        android:stateListAnimator="@null"
        android:layout_marginBottom="19dp"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorHint"
        android:fontFamily="monospace"
        android:backgroundTint="@color/colorWhite"
        android:id="@+id/editText10"
        android:layout_above="@+id/button7"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:layout_marginBottom="21dp"
        android:hint="Confirm VIN" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorWhite"
        android:textColorHint="@color/colorHint"
        android:fontFamily="monospace"
        android:id="@+id/editText5"
        android:layout_marginBottom="52dp"
        android:hint="VIN last 6 digits"
        android:layout_alignBottom="@+id/editText10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"

        android:textAlignment="center"
        android:id="@+id/textView12"
        android:textSize="18sp"
        android:layout_below="@+id/textView32"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:src="@drawable/compliance"
        android:id="@+id/imageView9"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/editText5"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="@color/colorToolbar"/>

</android.support.v4.widget.DrawerLayout>