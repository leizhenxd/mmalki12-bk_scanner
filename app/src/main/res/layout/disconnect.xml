<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingStart="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"

    android:paddingEnd="0dp"
    tools:context="com.example.malki.bkapp.DisconnectActivity">

    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        android:id="@+id/include"
        android:layout_height="wrap_content"/>


    <TextView
        android:text="TextView"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"

        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:id="@+id/textView16"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id = "@id/disconnectReasonList"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="match_parent"
        android:dividerHeight="50dp"
        android:divider="@color/zxing_transparent"
        android:entries = "@array/disconnectReason"
        android:cacheColorHint="@color/colorWhite"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
       />
</RelativeLayout>