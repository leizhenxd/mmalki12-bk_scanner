<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_prompt_disc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingStart="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingEnd="0dp"
    android:background="@color/colorBackground"
    tools:context="com.example.malki.bkapp.PromptDiscActivity">

    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="TextView"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"

        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorHint"
        android:layout_above="@+id/button13"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="177dp"
        android:textSize="18sp" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button13"
        android:layout_marginBottom="72dp"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:background="@color/colorBackground"
        android:textColor="@color/colorButton"
        android:stateListAnimator="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editText11"
        android:layout_alignEnd="@+id/editText11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText11"
        android:fontFamily="monospace"
        android:backgroundTint="@color/colorWhite"
        android:textColorHint="@color/colorHint"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="62dp"
        android:hint="reason for disconnect"
        android:layout_above="@+id/button12"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:background="@color/colorBackground"
        android:textColor="@color/colorButton"
        android:stateListAnimator="@null"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

</RelativeLayout>
