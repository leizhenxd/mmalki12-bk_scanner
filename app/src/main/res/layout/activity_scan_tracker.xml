<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:id="@+id/activity_scan_tracker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingStart="0dp"
    android:paddingLeft="0dp"
    android:background="@color/colorBackgroundGray"
    android:paddingRight="0dp"
    android:paddingEnd="0dp"
    tools:context="com.example.malki.bktelematics.ScanTracker">

    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="TextView"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:id="@+id/textView15"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true" />


    <TextView
        android:text="Auto scan the tracker barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/textView35" />

    <TextView
        android:text="(Or if the barcode does not scan)"
        android:layout_width="wrap_content"
        android:textColor="@color/colorHint"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button11"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView36" />

    <Button
        android:text="ENTER MANUALLY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:background="@android:color/transparent"
        android:textColor="@color/colorButton"
        android:stateListAnimator="@null"
        android:id="@+id/button11"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Scan Tracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:background="@android:color/transparent"
        android:textColor="@color/colorButton"
        android:stateListAnimator="@null"
        android:id="@+id/button17"
        android:textSize="24sp"


        android:layout_below="@+id/textView35"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/tracker_image"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/textView15"

        android:layout_marginTop="35dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@android:drawable/arrow_down_float"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView11" />
</RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="@color/colorToolbar"/>
</android.support.v4.widget.DrawerLayout>
