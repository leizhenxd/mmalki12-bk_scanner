<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_landing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.malki.bktelematics.Landing"
    android:background="@color/colorBackground">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:src="@drawable/bkmain"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:id="@+id/gridLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">



        <Button android:text="1"
            android:id="@+id/button_1"
            android:fontFamily="monospace"
            android:textSize="38sp"
            android:stateListAnimator="@null"

            android:background="@color/colorBackground" />

        <Button android:text="2"
            android:id="@+id/button_2"
            android:fontFamily="monospace"
            android:stateListAnimator="@null"
            android:textSize="38sp"
            android:background="@color/colorBackground"/>

        <Button android:text="3"
            android:id="@+id/button_3"
            android:fontFamily="monospace"
            android:textSize="38sp"
            android:stateListAnimator="@null"
            android:background="@color/colorBackground"/>



        <Button android:text="4"
            android:id="@+id/button_4"
            android:fontFamily="monospace"
            android:textSize="38sp"
            android:stateListAnimator="@null"
            android:background="@color/colorBackground"/>

        <Button android:text="5"
            android:id="@+id/button_5"
            android:fontFamily="monospace"
            android:textSize="38sp"
            android:stateListAnimator="@null"
            android:background="@color/colorBackground"/>

        <Button android:text="6"
            android:id="@+id/button_6"
            android:fontFamily="monospace"
            android:textSize="38sp"
            android:stateListAnimator="@null"
            android:background="@color/colorBackground"/>

        <Button android:text="7"
            android:id="@+id/button_7"
            android:fontFamily="monospace"
            android:textSize="38sp"
            android:stateListAnimator="@null"
            android:background="@color/colorBackground"/>

        <Button android:text="8"
            android:id="@+id/button_8"
            android:fontFamily="monospace"
            android:textSize="38sp"
            android:stateListAnimator="@null"
            android:background="@color/colorBackground"/>

        <Button android:text="9"
            android:id="@+id/button_9"
            android:fontFamily="monospace"
            android:textSize="38sp"
            android:stateListAnimator="@null"
            android:background="@color/colorBackground"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingBottom="5dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:layout_gravity="center"
            android:src="@drawable/hamburger"

            android:id="@+id/imageView13"
            />



        <Button android:text="0"
            android:id="@+id/button_0"
            android:fontFamily="monospace"
            android:textSize="38sp"
            android:stateListAnimator="@null"
            android:background="@color/colorBackground"/>

        <ImageButton

            android:src="@android:drawable/ic_input_delete"
            android:id="@+id/button_backspace"
            android:background="@color/colorBackground"
            android:layout_gravity="center"
            android:stateListAnimator="@null"/>


    </GridLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/gridLayout"
        android:layout_centerHorizontal="true">


        <ImageView
            android:src="@drawable/pinoff"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:id="@+id/light1"
            android:layout_width="0dp"/>

        <ImageView
            android:layout_height="20dp"
            android:layout_width="0dp"
            android:id="@+id/light2"
            android:layout_weight="1"
            android:src="@drawable/pinoff"/>

        <ImageView
            android:layout_height="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/light3"
            android:src="@drawable/pinoff"/>

        <ImageView
            android:layout_height="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/light4"
            android:src="@drawable/pinoff"/>


    </LinearLayout>

    <TextView
        android:text="TELEMATICS."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:id="@+id/textView22"
        android:layout_marginTop="-10dp"
        android:textSize="26sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="BLACK KNIGHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:id="@+id/textView21"
        android:textSize="26sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView20"
        android:layout_marginTop="-10dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=" WELCOME TO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/colorWhite"
        android:id="@+id/textView20"
        android:textSize="26sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textView22"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:textColor="@color/colorHint"
        android:id="@+id/textView23" />

</RelativeLayout>
