<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="600dp"

    android:background="#4B3F3F"
    android:layout_height="95dp">

    <ImageView
        android:id="@+id/animation"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Verifying - Please wait"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:id="@+id/textView18"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_alignTop="@+id/animation"
        android:layout_toRightOf="@+id/animation"
        android:layout_toEndOf="@+id/animation"
        android:layout_marginTop="16dp" />
</RelativeLayout>